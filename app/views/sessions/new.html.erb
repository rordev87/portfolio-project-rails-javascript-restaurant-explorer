<main class="container about-content">
  <div class="row mt-5">
    <div class="col">
      <h3>Login</h3>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <hr>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col">
      <%= form_tag(sessions_path) do %>
        <div class="form-group">
          <%= label_tag "Username" %>
          <%= text_field_tag :username, params[:username], class: "form-control", placeholder: "Please enter your username" %>
        </div>
        <div class="form-group">
          <%= label_tag "Password" %>
          <%= password_field_tag :password, params[:password], class: "form-control", placeholder: "Please enter your password" %>
        </div>
        <div class="form-group">
          <%= submit_tag "Login", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <hr>
    </div>
  </div>
</div>