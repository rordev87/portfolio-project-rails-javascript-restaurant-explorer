<%= error_messages_for(f.object) %>

<div class="form-group">
  <%= f.label :first_name %>
  <%= f.text_field :first_name, class: "form-control #{@user.errors[:first_name].any? ? 'is-invalid' : ''}", placeholder: "Please enter a first name" %>
</div>

<div class="form-group">
  <%= f.label :last_name %>
  <%= f.text_field :last_name, class: "form-control #{@user.errors[:last_name].any? ? 'is-invalid' : ''}", placeholder: "Please enter a last name" %>
</div>

<div class="form-group">
  <%= f.label :email %>
  <%= f.text_field :email, class: "form-control #{@user.errors[:email].any? ? 'is-invalid' : ''}", placeholder: "Please enter an email" %>
</div>

<div class="form-group">
  <%= f.label :username %>
  <%= f.text_field :username, class: "form-control #{@user.errors[:username].any? ? 'is-invalid' : ''}", placeholder: "Please enter a username" %>
</div>

<div class="form-group">
  <%= f.label "Select an Avatar" %><br>
  <%= f.collection_radio_buttons(:avatar_id, Avatar.all, :id, :name) do |a| %>
    <div class="form-check form-check-inline">
      <%= a.label(class: "form-check-label") { a.radio_button(class: "form-check-input") + a.text } %>
    </div>
  <% end %>

</div>

<div class="form-group">
  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control #{@user.errors[:password].any? ? 'is-invalid' : ''}", placeholder: "Please enter a password" %>
</div>

<div class="form-group mt-3">
  <%= f.submit submit_text, class: "btn btn-primary" %>
</div>